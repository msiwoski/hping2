<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/AboutButton"
        android:layout_width="230dp"
        android:layout_height="70dp"
        android:layout_marginEnd="186dp"
        android:layout_marginLeft="185dp"
        android:layout_marginRight="186dp"
        android:layout_marginStart="185dp"
        android:layout_marginTop="21dp"
        android:onClick="openAboutScreen"
        android:text="About"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/HelpButton" />

    <Button
        android:id="@+id/ScanButton"
        android:layout_width="230dp"
        android:layout_height="65dp"
        android:layout_marginEnd="186dp"
        android:layout_marginLeft="185dp"
        android:layout_marginRight="186dp"
        android:layout_marginStart="185dp"
        android:layout_marginTop="224dp"
        android:text="Scan"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hping2Title" />

    <Button
        android:id="@+id/HelpButton"
        android:layout_width="230dp"
        android:layout_height="65dp"
        android:layout_marginEnd="186dp"
        android:layout_marginLeft="185dp"
        android:layout_marginRight="186dp"
        android:layout_marginStart="185dp"
        android:layout_marginTop="19dp"
        android:onClick="openHelpScreen"
        android:text="Help"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ScanButton" />

    <EditText
        android:id="@+id/hping2Title"
        android:layout_width="114dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="244dp"
        android:layout_marginLeft="243dp"
        android:layout_marginRight="244dp"
        android:layout_marginStart="243dp"
        android:layout_marginTop="162dp"
        android:ems="10"
        android:inputType="none"
        android:text="@string/app_name"
        android:textSize="30sp"
        android:clickable="false"
        android:cursorVisible="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>